<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fb="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="10dp"
    android:background="#e6e6e6">
    
    <TextView
        android:id="@+id/textviewRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/labelNewUserRegistration"
        android:textSize="24sp"
        android:textColor="@color/red"
        android:textStyle="bold" />
    
   	<EditText
	    android:id="@+id/registerName"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="80dip"
	    android:layout_marginRight="80dip"
	    android:gravity="center" 
	    android:inputType="text"
	    android:hint="@string/hintName"
	    android:textSize="20sp">
    </EditText>
    
    <EditText
        android:id="@+id/registerPassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dip"
        android:layout_marginRight="80dip"
        android:gravity="center" 
        android:inputType="textPassword"
        android:hint="@string/hintPassword"
        android:textSize="20sp">                        
    </EditText>
    
    <EditText
        android:id="@+id/registerPassword2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dip"
        android:layout_marginRight="80dip"
        android:gravity="center" 
        android:inputType="textPassword"
        android:hint="@string/hintPassword2"
        android:textSize="20sp">                        
    </EditText>
    
    <EditText
	    android:id="@+id/registerMail"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="80dip"
	    android:layout_marginRight="80dip"
	    android:gravity="center" 
	    android:inputType="textEmailAddress"
	    android:hint="@string/hintMail"
	    android:textSize="20sp">
    </EditText>

   	<TableRow
   	    android:id="@+id/tableRow1"   
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content" >

   		<Button
   		    android:id="@+id/ButtonRegister"
   		    style="@style/buttonColor"
   		    android:layout_width="wrap_content"
   		    android:layout_height="wrap_content"
   		    android:layout_weight="1"
   		    android:background="@drawable/btn_red_matte"
   		    android:clickable="true"
   		    android:gravity="center"
   		    android:text="@string/labelRegister"
   		    android:textStyle="bold" />

   		<Button
   		    android:id="@+id/ButtonCancelRegistration"
   		    style="@style/buttonColor"
   		    android:layout_width="wrap_content"
   		    android:layout_height="wrap_content"
   		    android:layout_weight="1"
   		    android:background="@drawable/btn_red_matte"
   		    android:clickable="true"
   		    android:gravity="center"
   		    android:text="@string/labelCancel"
   		    android:textStyle="bold" />
   		
   		</TableRow>

   	    
		<com.facebook.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        fb:login_text="Entra con Facebook"
       fb:logout_text="Salir" />

</LinearLayout>
